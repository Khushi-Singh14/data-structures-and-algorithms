class Solution {
public:
    int squaredSum(int n){
        int sum=0;
        while(n>0){
            int d=n%10;
            sum=sum+d*d;
            n=n/10;
        }
        return sum;
    }
    bool isHappy(int n) {
        if(n==1) return true;
        int slow=n;
        int fast=n;
        while(fast!=1){
            slow=squaredSum(slow);
            fast=squaredSum(squaredSum(fast));
            if(slow==fast && slow !=1) return false;
        }
        return true;
    }
};
