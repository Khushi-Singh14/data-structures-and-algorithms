class Solution {
  public:
    void segregate0and1(vector<int> &a) {
        int n=a.size();
        int i=0;
        int j=n-1;
        while(i<j){
            if(a[i]==0 && a[j]==1){
                i++;
            }
            else if(a[i]==1 && a[j]==1){
                j--;
            }
            else if(a[i]==0 && a[j]==0){
                i++;
            }
            else if(a[i]==1 && a[j]==0){
                a[i]=0;
                a[j]=1;
            }
        }
    }
};
